# ScientistCloud Data Portal - Environment Variables
# Copy this file to .env and update the values

# Database Configuration
MONGO_URL=mongodb://mongo:27017
DB_NAME=scientistcloud

# Authentication (Auth0)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_MANAGEMENT_CLIENT_ID=your-auth0-management-client-id
AUTH0_MANAGEMENT_CLIENT_SECRET=your-auth0-management-client-secret

# Security
SECRET_KEY=your-secret-key-here
SECRET_IV=your-secret-iv-here

# Server Configuration
DEPLOY_SERVER=https://scientistcloud.com
DOMAIN_NAME=scientistcloud.com
PORT=8080

# Job Processing
JOB_IN_DATA_DIR=/mnt/visus_datasets/upload
JOB_OUT_DATA_DIR=/mnt/visus_datasets/converted
JOB_SYNC_DATA_DIR=/mnt/visus_datasets/sync
JOB_AUTH_DATA_DIR=/mnt/visus_datasets/auth

# SSL Configuration
SSL_EMAIL=admin@scientistcloud.com

# Development/Testing
NODE_ENV=production
DEBUG=false
